<li>
    <figure>
    <img src="{{imageUrl}}" alt="Cat Image">
    <figcaption>Added by <a id="ownerProfile" href="/profile/{{owner._id}}">{{owner.username}}</a></figcaption>
    </figure>
    <h3>{{name}}</h3>
    <p><span>Breed: </span>{{breed}}</p>
    <p><span>Price: </span>$ {{price}}</p>
    <ul class="buttons">
        {{#if isOwner}}
        <li class="btn edit"><a href="/cats/edit/{{_id}}">Change Info</a></li>
        {{/if}}
        <li class="btn delete"><a href="/cats/shelter/{{_id}}">Details</a></li>
    </ul>
</li>